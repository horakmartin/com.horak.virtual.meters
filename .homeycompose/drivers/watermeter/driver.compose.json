{
  "id": "watermeter",
  "name": {
    "en": "Virtual Water Meter",
    "cs": "Virtuální vodoměr"
  },
  "class": "sensor",
  "capabilities": [
    "meter_water"
  ],
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "settings": [
    {
      "id": "exclude_from_energy",
      "type": "checkbox",
      "label": {
        "en": "Exclude from Energy",
        "cs": "Vyloučit z Energie"
      },
      "hint": {
        "en": "Hide this device from the Energy tab. You can enable it again later.",
        "cs": "Skryje zařízení ze záložky Energie. Kdykoli můžete znovu povolit."
      },
      "value": false
    }
  ],
  "images": {
    "small": "drivers/watermeter/assets/images/small.png",
    "large": "drivers/watermeter/assets/images/large.png"
  },
  "energy": {
    "cumulative": true
  }
}
